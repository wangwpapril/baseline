<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background">
    
    <include
    android:layout_width="fill_parent"
    android:layout_height="@dimen/custom_title_height"
    layout="@layout/custom_title" />
        
    <RelativeLayout
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="0dip">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentBottom="true" 
	        android:orientation="vertical" >
		    
				<LinearLayout
				    android:id="@+id/inputLayout"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="20dip"
				    android:paddingTop="10dip"
				    android:orientation="vertical"
				    android:gravity="center_horizontal" >
				    
				    <EditText
				        android:id="@+id/firstNameEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="5dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="FIRST NAME"
				        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textEmailAddress" >

				    </EditText>
				    
					<TextView 
		                android:layout_width="match_parent"
		                android:layout_height="2px"
		                android:layout_gravity="center_vertical"
		                android:layout_weight="1"
		                android:background="@color/gray"
		                />
				    
		
				    <EditText
				        android:id="@+id/lastNameEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="LAST NAME"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
					<TextView 
		                android:layout_width="match_parent"
		                android:layout_height="2px"
		                android:layout_gravity="center_vertical"
		                android:layout_weight="1"
		                android:background="@color/gray"
		                />
				    
		
				    <EditText
				        android:id="@+id/emailEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="EMAIL"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
				    
			
				    <TextView 
		                android:layout_width="match_parent"
		                android:layout_height="2px"
		                android:layout_gravity="center_vertical"
		                android:layout_weight="1"
		                android:background="@color/gray"
		                />
				    
		
				    <EditText
				        android:id="@+id/countryEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="COUNTRY"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
				    
				    <TextView 
		                android:layout_width="match_parent"
		                android:layout_height="2px"
		                android:layout_gravity="center_vertical"
		                android:layout_weight="1"
		                android:background="@color/gray"
		                />
				    
		
				    <EditText
				        android:id="@+id/userNameEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="USERNAME"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
				    
				    <TextView 
		                android:layout_width="match_parent"
		                android:layout_height="2px"
		                android:layout_gravity="center_vertical"
		                android:layout_weight="1"
		                android:background="@color/gray"
		                />
				    
		
				    <EditText
				        android:id="@+id/passwordEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="PASSWORD"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
				    <TextView 
		                android:layout_width="match_parent"
		                android:layout_height="2px"
		                android:layout_gravity="center_vertical"
		                android:layout_weight="1"
		                android:background="@color/gray"
		                />
				    
		
				    <EditText
				        android:id="@+id/policyNumberEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="POLICY NUMBER"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
				    				    
				    	    
			</LinearLayout>

				<Button 
				    android:id="@+id/butSignUP"
				    android:layout_marginTop="0dip"
				    android:background="@color/gray"
				    android:layout_gravity="center_horizontal"
				    android:text="SIGN UP"
				    android:gravity="center_vertical"
				    android:paddingLeft="50dip"
                    android:paddingRight="50dip"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"/>
 					
 				 <TextView
				android:id="@+id/info"
				android:layout_marginTop="10dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="0dp"
				android:paddingLeft="60dip"
				android:paddingRight="60dip"
				android:gravity="center_horizontal"
				android:text="By registering for or using any portion of the Services, I accept the"
			    android:textColor="@color/white"
                android:textSize="15sp"				
				android:textAppearance="?android:attr/textAppearanceSmall" />

			    					
				<TextView
				    android:id="@+id/termsofuse"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:text="Terms of Use"
				    android:textSize="16sp" />
	        

			    </LinearLayout>
	</RelativeLayout>  

</LinearLayout>
